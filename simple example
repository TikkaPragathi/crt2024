#include <stdio.h>

int main() {
    while(1)
    {
        printf("Enter name");
        char name[20];
        scanf("%s",name);
        printf("Enter father name");
        char fname[20];
        scanf("%s",fname);
        printf("Enter branch");
        char branch[10];
        scanf("%s",branch);
        printf("Enter marital status 1 for single 2 for married");
        int a;
        scanf("%d",a);
        if(a==1)
        continue;
        printf("Enter spouse name");
        char sname[20];
        scanf("%s",name);
        printf("Enter no of children");
        int b;
        scanf("%d",&b);
        printf("enter another record(y/n)");
        char ch;
        fflush(stdin);
        scanf("%c",&ch);
        if(ch=='n' || ch=='N')
        break;
    }
    
    return 0;
}

